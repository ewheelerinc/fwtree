#!/bin/bash

echo 'Name: fwtree'
echo 'Summary: Tree-driven firewall'
echo "Version: $VERSION"
echo "Release: $PKGRELEASE"
echo "BuildArch: $ARCH"
echo 'Group: Application'
echo 'License: Restricted'
echo 'Prefix: /'
echo 'BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)'
echo 'Requires: ipset'
echo 'Requires: aggregate'
echo 'Conflicts: firewalld'
echo 'AutoReqProv: no'
echo ''
echo '%description'
echo ''
echo '%build'
echo "cp /usr/src/fwtree-git/$TARBALL %{_builddir}/$TARBALL"
echo ''
echo '%install'
echo 'mkdir -p $RPM_BUILD_ROOT/'
echo "mv $TARBALL"' $RPM_BUILD_ROOT/'"$TARBALL"
echo 'cd $RPM_BUILD_ROOT/'
echo 'tar -xf $RPM_BUILD_ROOT/'"$TARBALL"
echo 'rm $RPM_BUILD_ROOT/'"$TARBALL"
echo ''
echo '%clean'
echo 'rm -fr $RPM_BUILD_ROOT'
echo ''
echo '%post'
echo '[ "$(ls -A /etc/iptables.d/)" ] && exit'
echo ''
echo 'echo'
echo 'echo "NOTICE: SSH (22/tcp) is the only inbound service enabled by default."'
echo 'echo'
echo ''
echo 'mkdir -p /etc/iptables.d/{filter,nat,mangle}/{INPUT,OUTPUT}'
echo 'mkdir -p /etc/iptables.d/{filter,mangle}/FORWARD'
echo 'mkdir -p /etc/iptables.d/{nat,mangle}/{PRE,POST}ROUTING'
echo 'mkdir -p /etc/iptables.d/filter/{BLACKLIST_CHECK,FORWARD_DROP,VALIDATE_TCP_DROP,VALIDATE_TCP,DROPLOG,INPUT_DROP,OVERLIMIT_DROP,OUTPUT_LOG_ALLOW,OUTPUT_DROP,THROTTLED_DROP}'
echo ''
echo 'ln -s /usr/share/fwtree/rules/nat/_GLOBAL /etc/iptables.d/nat/'
echo 'ln -s /usr/share/fwtree/rules/filter/_GLOBAL /etc/iptables.d/filter/'
echo 'ln -s /usr/share/fwtree/rules/mangle/_GLOBAL /etc/iptables.d/mangle/'
echo ''
echo 'ln -s /usr/share/fwtree/rules/nat/_BEGIN /etc/iptables.d/nat/'
echo 'ln -s /usr/share/fwtree/rules/filter/BLACKLIST_CHECK/99-blacklist-check /etc/iptables.d/filter/BLACKLIST_CHECK/'
echo 'ln -s /usr/share/fwtree/rules/filter/BLACKLIST_CHECK/01-noblacklist-check /etc/iptables.d/filter/BLACKLIST_CHECK/'
echo 'ln -s /usr/share/fwtree/rules/filter/FORWARD_DROP/01-drop /etc/iptables.d/filter/FORWARD_DROP/'
echo 'ln -s /usr/share/fwtree/rules/filter/VALIDATE_TCP_DROP/01-drop /etc/iptables.d/filter/VALIDATE_TCP_DROP/'
echo 'ln -s /usr/share/fwtree/rules/filter/INPUT/90-udp-allow-dhcp /etc/iptables.d/filter/INPUT/'
echo 'ln -s /usr/share/fwtree/rules/filter/INPUT/07-icmp-allow /etc/iptables.d/filter/INPUT/'
echo 'ln -s /usr/share/fwtree/rules/filter/INPUT/09-validate-network /etc/iptables.d/filter/INPUT/'
echo 'ln -s /usr/share/fwtree/rules/filter/INPUT/zz99-INPUT_DROP /etc/iptables.d/filter/INPUT/'
echo 'ln -s /usr/share/fwtree/rules/filter/INPUT/09-BLACKLIST_CHECK /etc/iptables.d/filter/INPUT/'
echo 'ln -s /usr/share/fwtree/rules/filter/_BEGIN /etc/iptables.d/filter/'
echo 'ln -s /usr/share/fwtree/rules/filter/VALIDATE_TCP/01-validate-tcp /etc/iptables.d/filter/VALIDATE_TCP/'
echo 'ln -s /usr/share/fwtree/rules/filter/DROPLOG/01-drop-and-log /etc/iptables.d/filter/DROPLOG/'
echo 'ln -s /usr/share/fwtree/rules/filter/OUTPUT/07-icmp-allow /etc/iptables.d/filter/OUTPUT/'
echo 'ln -s /usr/share/fwtree/rules/filter/OUTPUT/zz99-OUTPUT_DROP /etc/iptables.d/filter/OUTPUT/'
echo 'ln -s /usr/share/fwtree/rules/filter/OUTPUT/yy99-OUTPUT_LOG_ALLOW /etc/iptables.d/filter/OUTPUT/'
echo 'ln -s /usr/share/fwtree/rules/filter/INPUT_DROP/01-drop /etc/iptables.d/filter/INPUT_DROP/'
echo 'ln -s /usr/share/fwtree/rules/filter/FORWARD/07-icmp-allow /etc/iptables.d/filter/FORWARD/'
echo 'ln -s /usr/share/fwtree/rules/filter/FORWARD/90-loopback /etc/iptables.d/filter/FORWARD/'
echo 'ln -s /usr/share/fwtree/rules/filter/FORWARD/zz99-FORWARD_DROP /etc/iptables.d/filter/FORWARD/'
echo 'ln -s /usr/share/fwtree/rules/filter/OVERLIMIT_DROP/01-drop /etc/iptables.d/filter/OVERLIMIT_DROP/'
echo 'ln -s /usr/share/fwtree/rules/filter/OUTPUT_LOG_ALLOW/01-allow /etc/iptables.d/filter/OUTPUT_LOG_ALLOW/'
echo 'ln -s /usr/share/fwtree/rules/filter/OUTPUT_DROP/01-drop /etc/iptables.d/filter/OUTPUT_DROP/'
echo 'ln -s /usr/share/fwtree/rules/filter/THROTTLED_DROP/01-drop /etc/iptables.d/filter/THROTTLED_DROP/'
echo 'ln -s /usr/share/fwtree/rules/mangle/_BEGIN /etc/iptables.d/mangle/'
echo 'ln -s /usr/share/fwtree/rules/COMMENT /etc/iptables.d/'
echo ''
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/03-VALIDATE_TCP /etc/iptables.d/filter/INPUT/'
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/03-VALIDATE_TCP /etc/iptables.d/filter/OUTPUT/'
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/03-VALIDATE_TCP /etc/iptables.d/filter/FORWARD/'
echo ''
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/05-established /etc/iptables.d/filter/INPUT/'
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/05-established /etc/iptables.d/filter/OUTPUT/'
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/05-established /etc/iptables.d/filter/FORWARD/'
echo ''
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/08-lo-input-allow /etc/iptables.d/filter/INPUT/'
echo ''
echo 'cp /etc/iptables.d/filter/_GLOBAL/22-tcp-allow-ssh-throttled /etc/iptables.d/filter/INPUT/'
echo 'chmod 644 /etc/iptables.d/filter/INPUT/22-tcp-allow-ssh-throttled'
echo ''
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/98-tcp-allow-fin-rst /etc/iptables.d/filter/INPUT/'
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/98-tcp-allow-fin-rst /etc/iptables.d/filter/OUTPUT/'
echo 'ln -s /etc/iptables.d/filter/_GLOBAL/98-tcp-allow-fin-rst /etc/iptables.d/filter/FORWARD/'
echo ''
echo 'ln -s /etc/iptables.d/mangle/_GLOBAL/10-tos-default /etc/iptables.d/mangle/PREROUTING'
echo 'ln -s /etc/iptables.d/mangle/_GLOBAL/10-tos-default /etc/iptables.d/mangle/POSTROUTING'
echo 'ln -s /etc/iptables.d/mangle/_GLOBAL/10-tos-default /etc/iptables.d/mangle/OUTPUT'
echo 'ln -s /etc/iptables.d/mangle/_GLOBAL/10-tos-default /etc/iptables.d/mangle/FORWARD'
echo ''
echo '/usr/sbin/fwtree-update-blacklists'
echo ''
echo '%files'
echo '%defattr (-, root, root)'
echo '/usr/sbin/fwtree'
echo '/usr/sbin/fwtree-parser'
echo '/usr/sbin/fwtree-update-blacklists'
echo '/usr/sbin/ipset-helper'
echo '/etc/iptables.d'
echo '/etc/cron.d/fwtree'
echo '/etc/ipset.d/noblacklist-ewheelerinc'
echo '/etc/rsyslog.d/20-fwtree.conf'
echo '/usr/share/fwtree'
if [ "$DIST" = 'el7' ]; then
echo '/usr/lib/systemd/system/fwtree.service'
fi
